<?php
include "conexao.php";

$email = $_POST["email"];
$senha = $_POST["senha"];

$stmt = $pdo->prepare("SELECT * FROM usuarios WHERE email = ?");
$stmt->execute([$email]);
$user = $stmt->fetch(PDO::FETCH_ASSOC);

if (!$user) {
    die("Usuário não encontrado");
}

if (password_verify($senha, $user["senha_hash"])) {
    echo "entrou!";
} else {
    echo "Senha erraa";
}
?>
<?php
include "conexao.php";

$nome = $_POST["nome"];
$email = $_POST["email"];
$senha = password_hash($_POST["senha"], PASSWORD_BCRYPT);

$stmt = $pdo->prepare("INSERT INTO usuarios (nome, email, senha_hash) VALUES (?, ?, ?)");
$stmt->execute([$nome, $email, $senha]);

echo "Usuário cadastrado!";
?>